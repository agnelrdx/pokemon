{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "moduleResolution": "node"
  },
  "include": ["./*.js", "./src/**/*.ts", "./test/**/*.ts"],
  "exclude": ["node_modules"]
}
